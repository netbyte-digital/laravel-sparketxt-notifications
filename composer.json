{
    "name": "netbyte-digital/laravel-sparketxt-notifications",
    "description": "Send Laravel notifications via Spark (NZ) eTxt API",
    "homepage": "https://github.com/netbyte-digital/laravel-sparketxt-notifications",
    "license": "MIT",
    "authors": [
        {
            "name": "Scott Wilson",
            "email": "scott.wilson@netbyte.com",
            "homepage": "https://netbyte.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/notifications": "~10.0 || ~11.0",
        "illuminate/support": "~10.0 || ~11.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Sparketxt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Sparketxt\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
